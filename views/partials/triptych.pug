        .row
          .col-lg-4
            .card-body.container.d-flex.h-100
              img.card-img-top.align-self-center(width='100%' height='auto')
          .col-lg-4
            .card-body.container.d-flex.h-100
              img.card-img-top.align-self-center(width='100%' height='auto')
          .col-lg-4
            .card-body.container.d-flex.h-100
              img.card-img-top.align-self-center(width='100%' height='auto')
        .row
      .modal-footer
